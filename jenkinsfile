pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/Maya-Marzouki/DevOps4SIM2.git'
            }
        }

        stage('Compile') {
            steps {
                sh "mvn -B clean compile -DskipTests"
            }
        }

        stage('Package') {
            steps {
                sh "mvn -B package -DskipTests"
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
